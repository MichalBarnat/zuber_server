<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">
    <changeSet id="1" author="michal-barnat">
        <createTable tableName="users">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="uuid" type="UUID">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="surname" type="VARCHAR(255)"/>
            <column name="dob" type="VARCHAR(255)"/>
            <column name="sex" type="VARCHAR(255)"/>
            <column name="email" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="michal-barnat">
    <createTable tableName="drivers">
        <column name="id" type="BIGINT">
            <constraints primaryKey="true" nullable="false"/>
        </column>
        <column name="uuid" type="UUID">
            <constraints nullable="false"/>
        </column>
        <column name="name" type="VARCHAR(255)"/>
        <column name="surname" type="VARCHAR(255)"/>
        <column name="dob" type="DATE"/>
        <column name="status_driver" type="VARCHAR(255)">
            <constraints nullable="false"/>
        </column>
        <column name="sex" type="VARCHAR(255)">
            <constraints nullable="false"/>
        </column>
        <column name="email" type="VARCHAR(255)">
            <constraints nullable="false"/>
        </column>
    </createTable>
    </changeSet>
    <changeSet id="3" author="michal-barnat">
        <createTable tableName="ride_requests">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="uuid" type="UUID">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="user_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="pick_up_location" type="VARCHAR(255)"/>
            <column name="drop_off_location" type="VARCHAR(255)"/>
            <column name="type" type="VARCHAR(255)"/>
            <column name="size" type="VARCHAR(255)"/>
            <column name="date" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="4" author="michal-barnat">
        <createTable tableName="ride_info">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="user_uuid" type="UUID">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="driver_uuid" type="UUID"/>
            <column name="driver_name" type="VARCHAR(255)"/>
            <column name="driver_location" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="5" author="michal-barnat">
        <createTable tableName="ride_assignments">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="ride_requestuuid" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="driveruuid" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="pick_up_location" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="drop_off_location" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>